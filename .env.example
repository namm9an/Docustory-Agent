# Application Configuration
APP_NAME="Docustory.in - Voice PDF Agent"
APP_VERSION="1.0.0"
DEBUG=false
HOST="127.0.0.1"
PORT=8000
RELOAD=true

# API Configuration
API_V1_STR="/api/v1"

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_PAGES=300
ALLOWED_EXTENSIONS=[".pdf", ".docx"]

# Session Management
SESSION_TIMEOUT_MINUTES=10
MAX_CONCURRENT_SESSIONS=15

# AI Model Endpoints (E2E Networks - Replace with your credentials)
QWEN_ENDPOINT="https://infer.e2enetworks.net/project/p-XXXX/endpoint/is-XXXX/v1/"
QWEN_API_KEY="your-e2e-networks-jwt-token-here"
QWEN_MODEL="Qwen/Qwen2.5-14B-Instruct"

WHISPER_ENDPOINT="https://infer.e2enetworks.net/project/p-XXXX/endpoint/is-XXXX/v1/"
WHISPER_API_KEY="your-e2e-networks-jwt-token-here"
WHISPER_MODEL="openai/whisper-large-v3"

XTTS_ENDPOINT="https://infer.e2enetworks.net/project/p-XXXX/endpoint/is-XXXX/v1/"
XTTS_API_KEY="your-e2e-networks-jwt-token-here"
XTTS_MODEL="coqui/XTTS-v2"

# Optional Features
ENABLE_YAKE_SEARCH=true
YAKE_MAX_KEYWORDS=20
YAKE_NGRAM_SIZE=3